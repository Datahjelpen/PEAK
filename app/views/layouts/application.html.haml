!!!
%html
  %head
    %title P E A K
    = csrf_meta_tags
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
  %body
    %nav
      - if user_signed_in?
        = succeed "." do
          %strong= current_user.email
        = link_to t('account.account'), edit_user_registration_path, :class => 'navbar-link'
        = link_to t('account.logout'), destroy_user_session_path, method: :delete, :class => 'navbar-link'
      - else
        = link_to t('account.register'), new_user_registration_path, :class => 'navbar-link'
        = link_to t('account.login'), new_user_session_path, :class => 'navbar-link'

      - if notice
        %p.alert.alert-success= notice
      - if alert
        %p.alert.alert-danger= alert
    = yield