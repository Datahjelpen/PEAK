= form_for @post_type do |f|
  - if @post_type.errors.any?
    #error_explanation
      %h2
        = pluralize(@post_type.errors.count, 'error')
        prohibited
        this post_type from being saved:
      %ul
        - @post_type.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :slug
    = f.text_field :slug
  .field
    = f.label :template
    = f.text_field :template
  .field
    = f.label :rights
    = f.text_field :rights
  .field
    = f.label :locale
    = f.text_field :locale
  .actions
    = f.submit 'Save'
