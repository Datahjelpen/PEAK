= form_for @post do |f|
  - if @post.errors.any?
    #error_explanation
      %h2
        = pluralize(@post.errors.count, 'error')
        prohibited
        this post from being saved:
      %ul
        - @post.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :text
    = f.text_area :text
  .field
    = f.label :excrept
    = f.text_area :excrept
  .field
    = f.label :extra_css
    = f.text_area :extra_css
  .field
    = f.label :extra_js
    = f.text_area :extra_js
  .field
    = f.label :type
    %select
      %option{value: "a", selected: params[:type] == "a"}= "a"
      %option{value: "b", selected: params[:type] == "b"}= "b"
  .field
    = f.label :author
    %f.select
      %f.option{value: "a", selected: params[:author] == "a"}= "a"
      %f.option{value: "b", selected: params[:author] == "b"}= "b"
  .field
    = f.label :template
    = f.text_field :template
  .field
    = f.label :microdata
    = f.text_field :microdata
  .field
    = f.label :custom_meta
    = f.text_field :custom_meta
  .field
    = f.label :rights
    = f.text_field :rights
  .field
    = f.label :comments
    = f.check_box :comments
    / = check_box "comments[#{comments}]",  1, !!(false)
  .field
    = f.label :status
    %select
      %option{value: "draft", selected: params[:status] == "draft"}= "draft"
      %option{value: "published", selected: params[:status] == "published"}= "published"
      %option{value: "private", selected: params[:status] == "private"}= "private"
  .field
    = f.label :locale
    %select
      %option{value: "no", selected: params[:locale] == "no"}= "no"
      %option{value: "en", selected: params[:locale] == "en"}= "en"
  .actions
    = f.submit 'Save'