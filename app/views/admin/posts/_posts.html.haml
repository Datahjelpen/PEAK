%table
  %tr
    %th Id
    %th Title
    %th Text
  - @posts.each do |post|
    %tr
      %td= post.id
      %td= post.title
      %td= post.text
      %td= link_to 'Show', admin_post_path(post)
      %td= link_to 'Edit', edit_admin_post_path(post)
      %td= link_to 'Destroy', admin_post_path(post),
            method: :delete,
            data: { confirm: 'Are you sure?' }
