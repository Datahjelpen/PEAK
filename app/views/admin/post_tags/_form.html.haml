= form_for @post_tag do |f|
  - if @post_tag.errors.any?
    #error_explanation
      %h2
        = pluralize(@post_tag.errors.count, 'error')
        prohibited
        this post_tag from being saved:
      %ul
        - @post_tag.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :slug
    = f.text_field :slug
  .actions
    = f.submit 'Save'
